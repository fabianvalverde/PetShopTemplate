---
import { useState } from 'react'
import Select from 'react-select'
---

<form class="search-form" action="/buscar" method="GET">
    <input
      type="text"
      name="query"
      placeholder="Buscar..."
    />
    <button type="submit">Buscar</button>
</form>  
</div>

<style>
  .search-form {
    display: flex;
    margin-top: 2rem;
    align-items: center;
    width: 100%;
    flex-direction: row;
    justify-content: center
  }

  input[type="text"] {
    padding: 5px;
    border: 1px solid #333;
    border-radius: 3px;
    margin: 0;
    min-width: 200px;
    max-width: 500px;
    width: 80%;
    height: 25px;
  }

  button {
    padding: 5px 10px;
    height: 37px;
    margin-left: 10px;
    background-color: #e5cc87;
    color: #333;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  }
</style>
